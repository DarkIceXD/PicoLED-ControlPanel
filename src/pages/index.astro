---
import Page from "../layouts/Page.astro";
import Container from "../components/Container.astro";
import Input from "../components/Input";
import Checkbox from "../components/Checkbox";
import Dropdown from "../components/Dropdown";
import Colors from "../components/Colors";
import Button from "../components/Button";

let key = 0;
---

<Page lang="en" class="dark">
	<Container>
		<div
			class="bg-white dark:bg-slate-800 shadow overflow-hidden rounded-md space-y-6 p-6"
		>
			<h1 class="text-xl font-medium">LED Control Panel</h1>
			<fieldset>
				<legend class="text-lg">LED Settings</legend>
				<div class="mt-4 space-y-2">
					<Input
						client:load
						key={key++}
						type="number"
						inputmode="numeric">Count</Input
					>
					<Input
						client:load
						key={key++}
						type="number"
						inputmode="numeric">Update delay (ms)</Input
					>
					<Input client:load key={key++} type="range" max="255"
						>Brightness</Input
					>
					<Checkbox client:load key={key++} type="checkbox"
						>Reverse</Checkbox
					>
				</div>
			</fieldset>
			<fieldset>
				<legend class="text-lg">Pattern</legend>
				<div class="mt-4 space-y-2">
					<Dropdown
						client:load
						key={key++}
						options={[
							"Disabled",
							"Enabled",
							"Breathing",
							"Fill",
							"Fill two sided",
							"Fade",
							"Fade Moving",
							"Snakes",
							"Faded Snakes",
							"Sparkle",
						]}
					/>
					<Input
						client:load
						key={key++}
						type="number"
						inputmode="numeric">Padding</Input
					>
					<Input
						client:load
						key={key++}
						type="number"
						inputmode="numeric">Max</Input
					>
				</div>
			</fieldset>
			<fieldset>
				<legend class="text-lg">Color</legend>
				<div class="mt-4 space-y-2">
					<Dropdown
						client:load
						key={key++}
						options={[
							"Selected",
							"Random",
							"Gradient",
							"Moving Gradient",
							"Breathing Gradient",
							"Rainbow",
							"Moving Rainbow",
							"Breathing Rainbow",
							"Color Palette",
							"Moving Color Palette",
						]}
					/>
					<Colors
						client:load
						key={key++}
						type="color"
						inputmode="numeric"
					/>
					<Input
						client:load
						key={key++}
						type="number"
						inputmode="numeric">Max</Input
					>
				</div>
			</fieldset>
			<details>
				<summary class="text-lg select-none">WiFi settings</summary>
				<p>These settings get changed after a reboot.</p>
				<Input client:load key={key++} type="text">AP Name</Input>
				<Input client:load key={key++} type="text">Password</Input>
			</details>
			<Button client:load key={key++}>Save</Button>
		</div>
	</Container>
</Page>
